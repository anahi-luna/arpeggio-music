<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Arpeggio Music</title>
    <link rel="stylesheet" href="/styles/index.css">
    <link rel="stylesheet" href="/styles/userList.css">
</head>
<body>
    <%- include('./partials/header') %>
    <main>
        <section class="user-info">
            <% users.forEach( userInfo => { %>
                <article class="container-info">
                    <div class="container-image">
                        <img class="user-image" src="/images/userProfile/profile3.avif" alt="Imagen de perfil del usuario">
                    </div>
                    <div class="user-detail">
                        <p> <b>ID: </b> <%=userInfo.id%></p>
                        <p> <b>Usuario: </b> <%=userInfo.userName%></p>
                        <p> <b>Nombres: </b> <%=userInfo.firstName%></p>
                        <p> <b>Apellidos: </b> <%=userInfo.lastName%></p>
                        <p> <b>Email: </b> <%=userInfo.email%></p>
                        <p> <b>Direccion: </b> <%=userInfo.address%></p>
                        <p> <b>Ciudad: </b> <%=userInfo.city%></p>
                        <p> <b>DNI: </b> <%=userInfo.dni%></p>
                        <p> <b>Telefono: </b> <%=userInfo.phone%></p>
                    </div>
                    <div class="container-btn">
                        <form action="/user/<%= userInfo.id %>" class="form-btn">
                            <button class="btn-order-details btn-perfil" type="submmit">
                                Ver perfil
                            </button>
                        </form>
                        <form action="/user/<%= userInfo.id %>/edit" class="form-btn">
                            <button class="btn-order-details btn-edit" type="submmit">
                                Editar perfil
                            </button>
                        </form>
                        <% if(userInfo.active) { %>
                            <form action="/user/<%= userInfo.id %>/delete" class="form-btn">
                                <button class="btn-order-details btn-delete" type="submmit">
                                    Eliminar
                                </button>
                            </form>
                        <% } else { %>
                            <form action="/user/<%= userInfo.id %>/active" class="form-btn">
                                <button class="btn-order-details btn-active" type="submmit">
                                    Activar
                                </button>
                            </form>
                        <% } %>
                    </div>
                </article>
            <% }); %>
        </section>
    </main>
    <%- include('./partials/footer') %>
</body>
</html>