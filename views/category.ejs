<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categorías</title>
    <link rel="stylesheet" href="/styles/index.css">
    <link rel="stylesheet" href="/styles/category.css">
</head>

<body>
    <%- include('./partials/header') %>
        <main>
           
            <div class="container">
                <form action="/category" method="post" class="bar-select">
                    <label>Categorías de productos:</label>
                    <% categoryList.forEach( category=> { %>
                        <div class="category-form">
                            <div class="text">
                                <p><b>Instrumento: </b>
                                    <%=category.name%>
                                </p>
                            </div>
                            <div class="buttons">
                                <button class="btn-category-edit" type="submit" href=""><i class="fa-solid fa-trash"></i></button>
                                <button class="btn-category-delete" type="submit" href="">Eliminar</button>
                            </div>
                        </div>
                        <% }) %>
                        <div class="button-create">
                            <button class="btn-create" type="submit" href="">Crear</button>
                        </div>
                </form>
            </div>
          


        </main>
        <%- include('./partials/footer') %>
</body>

</html>